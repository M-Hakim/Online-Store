<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.onlinestore.contextlisteners.DatabaseConnectionListener</listener-class>
    </listener>
    <servlet>
         
        <servlet-name>CartClear</servlet-name>
        <servlet-class>com.onlinestore.cart.CartClear</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Buy</servlet-name>
        <servlet-class>com.onlinestore.cart.Buy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Checkout</servlet-name>
        <servlet-class>com.onlinestore.cart.Checkout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreditLimit</servlet-name>
        <servlet-class>com.onlinestore.cart.CreditLimit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class> com.onlinestore.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductUpdateServlet</servlet-name>
        <servlet-class>com.onlinestore.servlets.ProductUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDeleteServlet</servlet-name>
        <servlet-class>com.onlinestore.servlets.ProductDeleteServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserUpdateServlet</servlet-name>
        <servlet-class>com.onlinestore.servlets.UserUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>com.onlinestore.servlets.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login_servlet</url-pattern>
    </servlet-mapping>

    

    <servlet>
        <servlet-name>HomepageServlet</servlet-name>
        <servlet-class> com.onlinestore.servlets.HomepageServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.onlinestore.servlets.SignupServlet</servlet-class>
    </servlet>
   
    <servlet>
        <servlet-name>SignupSuccessServlet</servlet-name>
        <servlet-class>com.onlinestore.servlets.SignupSuccessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login_servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomepageServlet</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupSuccessServlet</servlet-name>
        <url-pattern>/user_added</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/sign_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductUpdateServlet</servlet-name>
        <url-pattern>/ProductUpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDeleteServlet</servlet-name>
        <url-pattern>/ProductDeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>

        <servlet-name>UserUpdateServlet</servlet-name>
        <url-pattern>/UserUpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>/UserDeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartClear</servlet-name>
        <url-pattern>/CartClear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Buy</servlet-name>
        <url-pattern>/Buy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Checkout</servlet-name>
        <url-pattern>/Checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreditLimit</servlet-name>
        <url-pattern>/CreditLimit</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
